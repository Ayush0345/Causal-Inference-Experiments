    {
      "cell_type": "code",
      "source": [
        "# (f) 2SLS estimation using Z as an Instrument\n",
        "\n",
        "exog = X\n",
        "exog = sm.add_constant(exog)\n",
        "\n",
        "instrument = Z\n",
        "instrument = sm.add_constant(instrument)\n",
        "\n",
        "IV_model = IV2SLS(endog = Y, exog = exog, instrument = instrument).fit()\n",
        "print(IV_model.summary())"
      ],
